{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "test",
			"args": [
				"-p",
				"hotham",
				"--",
				"--test-threads",
				"1"
			],
			"env": {
				"RUST_BACKTRACE": "1"
			},
			"problemMatcher": [
				"$rustc"
			],
			"label": "Run Hotham test suite"
		},
		{
			"type": "cargo",
			"command": "test",
			"args": [
				"-p",
				"hotham",
				"--",
				"systems::pointers::tests::test_pointers_system",
				"--nocapture"
			],
			"env": {
				"RUST_BACKTRACE": "1"
			},
			"problemMatcher": [
				"$rustc"
			],
			"label": "Run a specific test",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--bin",
				"hotham_stress_test_desktop",
				"--release"
			],
			"env": {
				"RUST_BACKTRACE": "1"
			},
			"problemMatcher": [
				"$rustc"
			],
			"label": "Run Hotham stress test on the simulator",
			"group": {
				"kind": "test",
				"isDefault": false
			}
		},
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--bin",
				"hotham_simple_scene_example",
				"--release"
			],
			"env": {
				"RUST_BACKTRACE": "1"
			},
			"problemMatcher": [
				"$rustc"
			],
			"label": "Run Hotham simple scene on the simulator",
			"group": {
				"kind": "test",
				"isDefault": false,
			}
		}
	]
}
